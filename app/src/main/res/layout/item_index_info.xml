<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@color/white"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="150dp"
        android:layout_height="140dp"
        android:src="@mipmap/aslogo"
        android:background="@drawable/bg_ellipse"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:padding="@dimen/dp_10dp"
        >
        <!--title-->
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10dp"
            android:textColor="#666"
            android:textSize="@dimen/sp_18sp"
            android:text="创建一个Fragment"/>


        <TextView
            android:id="@+id/tv_fenlei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统公告"
            android:padding="@dimen/dp_5dp"
            android:textColor="@color/red"
            android:background="@drawable/bg_ellipse"

            android:layout_alignParentBottom="true"
            />

        <TextView
            android:id="@+id/tv_subtitme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:padding="@dimen/dp_5dp"
            android:textColor="@color/red"
            android:background="@drawable/bg_ellipse"
            android:text="12-19"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</LinearLayout>