<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rg_buttom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:padding="10dp">

    <RadioButton
        android:id="@+id/tab1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:button="@null"
        android:checked="true"
        android:drawableTop="@drawable/home_icon_button_selector"
        android:gravity="center"
        android:text="@string/home"
        android:textColor="@drawable/home_button_selector" />

    <RadioButton
        android:id="@+id/tab2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:button="@null"
        android:drawableTop="@drawable/dingdan_icon_button_selector"
        android:gravity="center"
        android:text="@string/dingdan"
        android:textColor="@drawable/home_button_selector" />
    <RadioButton
        android:id="@+id/tab3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:button="@null"
        android:drawableTop="@drawable/me_icon_button_selector"
        android:gravity="center"
        android:text="@string/me"
        android:textColor="@drawable/home_button_selector" />
</RadioGroup>